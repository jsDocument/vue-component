{
  "include": [
    "src/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./types/vue-shims.d.ts"
  ],
  "compilerOptions": {
    // "types": [
    //   // add node as an option
    //   "node"
    // ],
    // typeRoots option has been previously configured
    // "typeRoots": [
    //   // add path to @types
    //   "node_modules/@types"
    // ],
    // 以严格模式解析
    "strict": true,
    // 在.tsx文件里支持JSX
    "jsx": "preserve",
    // 使用的JSX工厂函数
    "jsxFactory": "h",
    // 允许从没有设置默认导出的模块中默认导入
    "allowSyntheticDefaultImports": true,
    "plugins": [{ "name": "ts-vue-plugin" }],
    "strictPropertyInitialization": false,
    // 启用装饰器
    "experimentalDecorators": true,
    "strictFunctionTypes": false,
    // 允许编译javascript文件
    "allowJs": true,
    // 采用的模块系统
    "module": "esnext",
    // 编译输出目标 ES 版本
    "target": "es6",
    // 如何处理模块
    "moduleResolution": "node",
    // 在表达式和声明上有隐含的any类型时报错
    "noImplicitAny": true,
    // "lib": [
    //   "dom",
    //   "es5",
    //   "es6",
    //   "es7",
    //   "es2015.promise"
    // ],
    // 将每个文件作为单独的模块
    // "isolatedModules": true,
    "sourceMap": true,
    "pretty": true
  }
}